<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_up_background"
    tools:context=".AppCommon.MainAppScreen">

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="108dp"
        android:layout_height="61dp"
        android:layout_marginTop="250dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_appName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/healthy_eating"
        app:tint="@color/inchWorm" />

    <TextView
        android:id="@+id/tv_appName"
        android:layout_width="89dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/app_Name_In_Main"
        android:textColor="@color/yellowGreen"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/appLogo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/appLogo"
        app:layout_constraintTop_toBottomOf="@+id/appLogo" />

    <Button
        android:id="@+id/login_btn_main_screen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/login_register_button_background"
        android:onClick="directToLogin"
        android:text="@string/Log_In_Label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_appName" />

    <Button
        android:id="@+id/register_btn_main_screen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/login_register_button_background"
        android:onClick="directToregister"
        android:text="@string/register_btn_main_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btn_main_screen" />

</androidx.constraintlayout.widget.ConstraintLayout>